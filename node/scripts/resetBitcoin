#!/bin/sh

#
# Reset the Bitcoin chain back to genesis
#

export BTCDATA=$OLDATA/bitcoin
export LOG=$OLDATA

echo "============================================================" >> $LOG/bitcoin.log
echo "Clean all bitcoin data" >> $LOG/bitcoin.log
echo "============================================================" >> $LOG/bitcoin.log

rm -rf $BTCDATA/bitcoin/*

mkdir -p $BTCDATA/A
mkdir -p $BTCDATA/B
mkdir -p $BTCDATA/C

echo "Bitcoin data reset done"